<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.SettingsActivity"
    android:orientation="vertical"

    >

    <Button style="@style/DefaultListItemButton"
        android:id="@+id/settings_button_changeTheme"
        android:text="Changer de thème"/>

    <View style="@style/Divider"/>

    <Button style="@style/DefaultListItemButton"
        android:id="@+id/settings_button_logout"
        android:text="Se déconnecter"/>

    <View style="@style/Divider"/>

    <Button style="@style/DefaultListItemButton"
        android:id="@+id/settings_button_accountDelete"
        android:text="Supprimer le compte"/>
</LinearLayout>