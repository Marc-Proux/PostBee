<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_itempost_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >
        <EditText
            android:id="@+id/editpost_edittext_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_title"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/editpost_textview_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="start"
            android:text="@string/placeholder_username"/>

        <EditText
            android:id="@+id/editpost_edittext_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="28dp"
            android:textSize="24sp" />

        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textSize="16dp"
            android:text="@string/ui_target" />

        <CheckBox
            android:id="@+id/editpost_checkbox_targetStudents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etudiants" />
        <CheckBox
            android:id="@+id/editpost_checkbox_targetTeachers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enseignants" />
        <CheckBox
            android:id="@+id/editpost_checkbox_targetOthers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autres" />-->

        <Button
            android:id="@+id/editpost_button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publier le post" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>