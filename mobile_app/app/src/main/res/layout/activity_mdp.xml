<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.MdpActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout style="@style/LayoutDefault">

        <ImageView
            android:id="@+id/resetpassword_imageview_logo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:src="@drawable/logo_line" />

        <TextView style="@style/TextAppearance.Material3.TitleLarge"
            android:id="@+id/resetpassword_textview_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/ui_resetPasswordTitle" />

        <EditText style="@style/DefaultTextField"
            android:id="@+id/resetpassword_edittext_email"
            android:inputType="textEmailAddress"
            android:hint="@string/ui_email"
            android:layout_marginTop="@dimen/gap_part" />

        <Button style="@style/ButtonAction"
            android:id="@+id/resetpassword_button_reset"
            app:cornerRadius="12dp"
            android:text="@string/ui_resetPassword"
            android:layout_marginTop="@dimen/gap_partBig" />
    </LinearLayout>
</ScrollView>