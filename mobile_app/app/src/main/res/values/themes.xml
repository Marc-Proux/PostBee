<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Mobile_app" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.Mobile_app" parent="Base.Theme.Mobile_app" />

    <style name="HomeNavbarButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">#0000</item>
        <item name="android:drawableTint">@color/ensisa_yellow</item>
        <item name="android:textColor">@color/ensisa_blue</item>
    </style>

    <style name="DefaultListItemButton" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#0000</item>
        <item name="android:textColor">@color/ensisa_yellow</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="DefaultTextField" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ensisa_blue</item>
        <item name="android:background">@drawable/border_textfield</item>
    </style>

    <style name="LayoutDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/gap_part</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="ButtonAction">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/ensisa_yellow</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonActionBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ensisa_yellow</item>
    </style>

    <style name="ListElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/gap_part</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="DefaultTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/ensisa_blue</item>
        <item name="tabSelectedTextColor">@color/ensisa_yellow</item>
        <item name="tabIndicatorColor">@color/ensisa_yellow</item>
    </style>

</resources>